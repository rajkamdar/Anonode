<html>
  <head>
    <title>
    Anonode
  </title>
  <link rel="stylesheet" type="text/css" href="../assets/style.css"/>
  </head>

  <body>
    <%if(img!=undefined){%>
    <img src="/<%=img%>" id="dp"/>
    <%}%>
    <h3><%=name%></h3>
    <div class="form">
      <form action="/confess" method="post">
        <input type="text" name="msg" placeholder="Enter your message here">
        <input type="text" hidden="true" name="uname" value="<%=uname%>">
        <button type ="submit" name="Submit">Confess</button>
      </form>
    </div>
    <div class="results">
      <% for(var i=0;i<confessions.length;i++){%>
        <div> <%=confessions[i].msg%></div>
        <%}%>
    </div>
  </body>
</html>
